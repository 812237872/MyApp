<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xian_shape"
    >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:background="@mipmap/com_icon_down_default_hdpi"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_24"
                    android:id="@+id/img_ying"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:text="影评"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#333"
                    android:layout_marginTop="@dimen/dp_20"
                    android:id="@+id/text_ying"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_3"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_below="@id/text_ying"
                    android:layout_marginTop="@dimen/dp_6"
                    android:src="@mipmap/group2"
                    android:background="@drawable/qi"
                    />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_24"
                    android:layout_below="@id/text_ying"
                    android:id="@+id/rec_ying"
                    />

        </RelativeLayout>
        </ScrollView>
        <ImageView
            android:id="@+id/img_write"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@mipmap/com_icon_publish_default_hdpi"
            />
        <RelativeLayout
            android:id="@+id/rl_comment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="#fff"
            android:visibility="gone"
            android:layout_alignParentBottom="true">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ccc" />
                <TextView
                    android:id="@+id/hide_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隐藏"
                    android:textSize="@dimen/sp_13"
                    android:textColor="#ccc"
                    android:drawableBottom="@mipmap/com_icon_down_default_hdpi"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>
                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="#ccc"
                    android:layout_toRightOf="@id/hide_down"
                    android:layout_marginLeft="@dimen/dp_10"/>
                <EditText
                    android:id="@+id/comment_content"
                    android:hint="输入评论内容"
                    android:textSize="@dimen/sp_15"
                    android:singleLine="true"
                    android:layout_width="@dimen/dp_240"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_toRightOf="@id/hide_down"
                    android:layout_marginLeft="@dimen/dp_20"/>
                <Button
                    android:id="@+id/comment_send"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_35"
                    android:layout_margin="@dimen/dp_5"
                    android:text="发送"
                    android:textSize="@dimen/sp_13"
                    android:textColor="#fff"
                    android:background="#47C53E"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_15"/>
        </RelativeLayout>

</RelativeLayout>
