<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="550dp"
    android:layout_gravity="center"
    android:layout_height="150dp"
    android:layout_marginBottom="40dp"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:elevation="5dp"
        android:background="@drawable/shape_recommendadapter">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/Nearby_SimpleDraweeView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Nearby_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/Nearby_address"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/Nearby_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <CheckBox
                    android:id="@+id/Nearby_CheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:button="@null"
                    android:background="@drawable/selector_recommend"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>