<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.SreachActivity"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.bw.movie.view.MyViews
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/move_rp"
                android:layout_margin="10dp"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门电影"
                    android:padding="5dp"
                    android:button="@null"
                    android:textSize="20sp"
                    android:id="@+id/move_rb1"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/move_selector"
                    android:textColor="#fff"
                    android:checked="true"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正在热映"
                    android:padding="5dp"
                    android:button="@null"
                    android:textSize="20sp"
                    android:id="@+id/move_rb2"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/move_selector"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="即将上映"
                    android:padding="5dp"
                    android:button="@null"
                    android:textSize="20sp"
                    android:id="@+id/move_rb3"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/move_selector"
                    />
            </RadioGroup>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="550dp">
            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/move_page"
                />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/com_icon_my_default_hdpi"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:id="@+id/move_back"
                    />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>