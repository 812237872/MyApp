<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bw.movie.view.ShowActivity">

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/Ashow_ViewPager"></FrameLayout>

    <RadioGroup
        android:id="@+id/Ashow_RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/Ashow_Radio1"
            android:background="@drawable/fragment_film"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"

            android:button="@null"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/Ashow_Radio2"
            android:background="@drawable/fragment_cinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:button="@null"
            />
        <RadioButton
            android:id="@+id/Ashow_Radio3"
            android:background="@drawable/fragment_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:button="@null"
            />
    </RadioGroup>

</RelativeLayout>