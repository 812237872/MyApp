<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xian_shape"
    >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@mipmap/com_icon_down_default_hdpi"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:id="@+id/img_yu"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:text="预告片"
            android:textSize="@dimen/sp_16"
            android:textColor="#333"
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/text_yu"
            />
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_below="@id/text_yu"
            android:layout_marginTop="@dimen/dp_6"
            android:src="@mipmap/group2"
            android:background="@drawable/qi"
            />
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_153"
            android:layout_below="@id/img_yu"
            android:layout_margin="@dimen/dp_24"
            android:id="@+id/videoView1"
            />
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_153"
            android:layout_below="@id/videoView1"
            android:layout_margin="@dimen/dp_24"
            android:id="@+id/videoView2"
            />
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_153"
            android:layout_below="@id/videoView2"
            android:layout_margin="@dimen/dp_24"
            android:id="@+id/videoView3"
            />
                </RelativeLayout>
        </ScrollView>
</RelativeLayout>
