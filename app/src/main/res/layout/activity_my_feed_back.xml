<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/my_feed_te"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_24"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户信息"/>
    <RelativeLayout
        android:id="@+id/RelativeLayout_cuo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_feed_te"
        >
        <EditText
            android:id="@+id/my_feed_edit"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:hint="写下您对产品的感受吧！工作人员将会在第一时间评估处理"/>
        <Button
            android:id="@+id/my_feed_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_feed_edit"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="54dp"
            android:background="@drawable/shape_button"
            android:textColor="#fff"
            android:text="提交"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RelativeLayout_dui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_feed_te"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/my_feed_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/queren"/>
        <TextView
            android:id="@+id/my_feed_chengong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="反馈成功"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/my_feed_image"
            android:textSize="24dp"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="感谢您对维度影院的关注与支持，我们会认真处理您的反馈，尽快修复和完善相关功能。"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/my_feed_chengong"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/my_feed_back"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_marginBottom="50dp"
            android:layout_alignParentBottom="true"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/com_icon_return_default_hdpi"/>
    </RelativeLayout>
</RelativeLayout>