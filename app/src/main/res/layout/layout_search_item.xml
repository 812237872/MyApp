<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_130"
            android:background="@mipmap/movie_bg_level_hdpi"
            android:layout_centerHorizontal="true"
            />
        <CheckBox
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@mipmap/com_icon_collection_default_hdpi"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:id="@+id/check_collec"
            android:button="@null"
            />
        <ImageView
            android:layout_width="@dimen/dp_103"
            android:layout_height="@dimen/dp_129"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="@dimen/dp_36"
            android:id="@+id/move_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="sss"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/move_img"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/move_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
            android:layout_toRightOf="@id/move_img"
            android:layout_below="@id/move_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:textColor="#fff"
            android:id="@+id/move_jie"
            />
        <ImageView
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_7"
            android:background="@mipmap/group2"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/move_img"
            android:layout_marginTop="@dimen/dp_29"
            />
    </RelativeLayout>
</LinearLayout>
